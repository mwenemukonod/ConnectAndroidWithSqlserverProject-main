<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.EnreJugementSupplitifActivity">
    <include
        android:id="@+id/bar_allactivities"
        layout="@layout/layout_app_bar"/>
    <androidx.cardview.widget.CardView
        android:background="#FFFFFF"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edtnomjug"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Saisir nom Agent"
                android:inputType="text"/>
            <EditText
                android:id="@+id/edtdatejug"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/personimg"
                android:hint="Saisir  Date jugement"
                android:inputType="text"
                android:paddingLeft="8dp" />
            <EditText
                android:id="@+id/edtmotif"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/personimg"
                android:hint="Saisir Motif"
                android:inputType="textMultiLine" />
            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="#092c5c"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btnenvoyer"
                android:text="CrÃ©er" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/pbbar" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>