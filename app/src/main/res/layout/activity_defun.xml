<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDEEDD"
    tools:context=".Activities.DefunActivity">
    <include
        android:id="@+id/bar_allactivities"
        layout="@layout/layout_app_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDENTITE DEFUN"
                android:layout_gravity="center"
                android:gravity="center"/>
            <androidx.cardview.widget.CardView
                android:background="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/edtnomdef"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="Saisir nom defun"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/edtpostnomdef"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/personimg"
                        android:hint="Saisir  postnom defun"
                        android:inputType="text"
                        android:paddingLeft="8dp" />
                    <EditText
                        android:id="@+id/edtprenomdef"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/personimg"
                        android:hint="Saisir prenom defun"
                        android:inputType="text" />
                    <EditText
                        android:id="@+id/edtnationalitedefun"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/personimg"
                        android:hint="Saisir nationalite defun"
                        android:inputType="text" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:background="@drawable/editland"
                        android:layout_margin="2dp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/spinnergenre"
                            android:gravity="center">
                        </Spinner>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/edtdatenaiss"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="Date naissance"
                        android:inputType="phone" />
                    <EditText
                        android:id="@+id/edtage"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint=" saisir Age"
                        android:inputType="number"
                        android:maxLength="3"/>
                    <EditText
                        android:id="@+id/edtrechercheparent"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="Recher Parent"
                        android:inputType="phone"
                        android:imeOptions="actionSearch"/>
                    <EditText
                        android:visibility="gone"
                        android:enabled="false"
                        android:id="@+id/edtidparent"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="nom parent"
                        android:inputType="phone" />
                    <EditText

                        android:enabled="false"
                        android:id="@+id/edtnomparent"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="nom parent"
                        android:inputType="phone" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADRESSE DEFUN"
                android:layout_gravity="center"
                android:gravity="center"/>
            <androidx.cardview.widget.CardView
                android:background="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/edtprovince"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="Saisir Province"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/edtvilledietri"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/personimg"
                        android:hint="Saisir  ville ou district"
                        android:inputType="text"
                        android:paddingLeft="8dp" />
                    <EditText
                        android:id="@+id/edtcomnuneterrioire"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/personimg"
                        android:hint="Saisir commune ou territoire"
                        android:inputType="text" />
                    <EditText
                        android:id="@+id/edtcheferie"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="saisir chefferie"
                        android:inputType="text"
                        android:imeOptions="actionSearch"/>
                    <EditText

                        android:id="@+id/edtquartier"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="saisir quartier"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/edtavlocalite"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:gravity="center"
                        android:hint="saisir avenue ou localité"
                        android:inputType="phone" />

                    <EditText

                        android:id="@+id/edtnumeroparcel"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="saisir numero parcelle"
                        android:inputType="phone" />
                    <EditText

                        android:id="@+id/edtresidenceactuel"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edittext_icon"
                        android:drawableLeft="@drawable/bikimg"
                        android:hint="saisir residence actuel"
                        android:inputType="phone" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CAUSE DEFUN"
                android:layout_gravity="center"
                android:gravity="center"/>
            <androidx.cardview.widget.CardView
                android:background="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <EditText
                android:id="@+id/edtcausedece"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/personimg"
                android:hint="Cause Décè"
                android:inputType="text" />
            <EditText
                android:id="@+id/edtlieudece"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Lieu Décès"
                android:inputType="text" />
            <EditText
                android:id="@+id/edtmomentD"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Saisir Moment Deces"
                android:inputType="text"/>
            <EditText
                android:id="@+id/edtdateDece"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Date Deces"
                android:inputType="text" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Declarant"
                android:layout_gravity="center"
                android:gravity="center"/>
        <androidx.cardview.widget.CardView
            android:background="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="@drawable/editland"
                android:layout_margin="2dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/spinnertypedeclarent"
                    android:gravity="center">
                </Spinner>
            </LinearLayout>

            <EditText
                android:id="@+id/edtdelegue"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Recher Declarant"
                android:inputType="phone"
                android:imeOptions="actionSearch"/>
            <EditText
                android:enabled="false"
                android:id="@+id/edtnomdelegue"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="nom delegue"
                android:inputType="phone" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

            <Button
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="#092c5c"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btnenvoyer"
                android:text="Enregistrer" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/pbbar" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>