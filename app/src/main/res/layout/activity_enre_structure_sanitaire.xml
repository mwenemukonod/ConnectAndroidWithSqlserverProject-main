<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.EnreStructureSanitaireActivity">
    <include
        android:id="@+id/bar_allactivities"
        layout="@layout/layout_app_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edtdesignation"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Saisir la designation"
                android:inputType="text"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="20dp"/>
            <EditText
                android:id="@+id/edtsigle"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/personimg"
                android:hint="Saisir sigle"
                android:inputType="text"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="20dp"/>
            <EditText
                android:id="@+id/edtcontact"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/personimg"
                android:hint="Saisir contact"
                android:inputType="text"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="20dp"/>
            <EditText
                android:id="@+id/edtnomrepo"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/personimg"
                android:hint="Saisir nom responsable"
                android:inputType="text"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="20dp"/>
            <EditText
                android:id="@+id/edtpostnomrespo"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Saisir postnom reponsable"
                android:inputType="text"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="20dp"/>
            <EditText
                android:id="@+id/edtprenom"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Saisir prenom responsable"
                android:inputType="phone"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="20dp"/>
            <EditText
                android:id="@+id/edtqualitetire"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_icon"
                android:drawableLeft="@drawable/bikimg"
                android:hint="Saisir qualité ou tittre"
                android:inputType="phone"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:drawablePadding="20dp"/>
            <Button
                android:textAllCaps="false"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="#092c5c"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btnenvoyer"
                android:text="Créer" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/pbbar" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>